#include <stdio.h>

int multiplicacao (int n, int x, int i, int mult){
  if (n==0) {
    return 0;
  }
  else{
    for (i=0; i<x; i++){
      mult = mult + n;
    }
    return mult;
  }
}

int main(void) {
  int n=0, x=0, mult=0, i=0;

  printf("Digite dois valores a serem multiplicados:\n");
  scanf("%d %d", &n, &x);
  
  printf("Resultado de %d * %d = %d.\n \n", n, x, multiplicacao(n, x, i, mult));
  
    return 0;
}
